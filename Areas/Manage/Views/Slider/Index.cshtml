@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="slider" asp-action="create">Create</a>
    </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Image</th>
      <th scope="col">SubTitle</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Slider item in Model)
   {
       <tr>
      
      <td>@item.Id</td>
      <td>
          <img src="~/assets/sliderImage/@item.Image"/>
      </td>
      <td>@item.SubTitle</td>
      <td>@item.Title</td>
      <td>@item.Description</td>
      <td>
          <a asp-controller="slider" asp-action="edit" asp-route-id="@item.Id">Edit</a>
          <a asp-controller="slider" asp-action="delete" asp-route-id="@item.Id">Delete</a>
      </td>
      
    </tr>
   }
   
  </tbody>
</table>
</div>